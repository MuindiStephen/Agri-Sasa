<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".ui.fragments.auth.UserTypeAccountFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:layout_marginTop="@dimen/_16dp"
        android:layout_width="match_parent">

        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="38.75dp"
            android:layout_height="50.45dp"
            android:src="@drawable/group"
            tools:ignore="contentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">

        <TextView
            android:fontFamily="@font/nunito_sans"
            android:id="@+id/tv_act_menu"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:text="Choose your account"
            android:textAllCaps="true"
            android:textColor="@color/main"
            android:textSize="24sp" />

        <TextView
            android:fontFamily="@font/nunito_sans"
            android:id="@+id/tv_acct_words"
            android:layout_below="@id/tv_act_menu"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Select the type of account you wish"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <View
            android:background="#40ffffff"
            android:layout_below="@id/tv_acct_words"
            android:layout_centerHorizontal="true"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="30dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="2.7"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:padding="@dimen/_16dp"
        android:layout_width="match_parent">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/main"
            android:id="@+id/cv_farmer"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/_16dp"
            android:layout_width="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_marginTop="@dimen/_8dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_collapseMode="pin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_farmer"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/farmer"
                        app:tint="@color/bg_gray" />

                    <TextView
                        android:id="@+id/tv_farmer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/nunito_sans"
                        android:text="Farmer"
                        android:layout_marginTop="@dimen/_16dp"
                        android:textColor="@color/bg_gray"
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cv_agrodealer"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/very_light_gray"
            android:layout_marginBottom="@dimen/_16dp"
            app:layout_collapseMode="pin">

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_agrodealer"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="40dp"
                        android:layout_width="100dp"
                        app:tint="@color/main"
                        android:layout_marginTop="@dimen/_10dp"
                        android:src="@drawable/office_building" />

                    <TextView
                        android:id="@+id/tv_agrodealer"
                        android:fontFamily="@font/nunito_sans"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="AgroDealer"
                        android:layout_marginTop="@dimen/_16dp"
                        android:textAlignment="center"
                        android:textColor="@color/main"
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="2.7"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:padding="@dimen/_16dp"
        android:layout_width="match_parent">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/very_light_gray"
            android:id="@+id/cv_fieldagents"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/_16dp"
            android:layout_width="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_marginTop="@dimen/_8dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_collapseMode="pin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_fieldagent"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/businessman"
                        app:tint="@color/main" />

                    <TextView
                        android:id="@+id/tv_fieldagent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/nunito_sans"
                        android:text="Field Agent"
                        android:layout_marginTop="@dimen/_16dp"
                        android:textColor="@color/main"
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cv_buyers"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/very_light_gray"
            android:layout_marginBottom="@dimen/_16dp"
            app:layout_collapseMode="pin">

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_buyer"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="40dp"
                        android:layout_width="100dp"
                        app:tint="@color/main"
                        android:layout_marginTop="@dimen/_10dp"
                        android:src="@drawable/customer" />

                    <TextView
                        android:id="@+id/tv_buyer"
                        android:fontFamily="@font/nunito_sans"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="Buyer"
                        android:layout_marginTop="@dimen/_16dp"
                        android:textAlignment="center"
                        android:textColor="@color/main"
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5">

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:drawablePadding="10dp"
            android:textAllCaps="false"
            android:text="Continue"
            android:visibility="invisible"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</LinearLayout>

