<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/bg_gray"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:layout_width="match_parent">

        <ImageView
            android:layout_centerInParent="true"
            android:layout_height="110sp"
            android:layout_width="130sp"
            app:tint="@color/main"
            android:src="@drawable/ic_plant_growing_svgrepo_com2"
            tools:ignore="contentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:layout_width="match_parent">

        <TextView
            android:fontFamily="@font/montserrat_medium"
            android:id="@+id/tv_act_menu"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:text="Choose your account"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <TextView
            android:fontFamily="@font/montserrat_medium"
            android:id="@+id/tv_acct_words"
            android:layout_below="@id/tv_act_menu"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Select the type of account you wish"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:background="#40ffffff"
            android:layout_below="@id/tv_acct_words"
            android:layout_centerHorizontal="true"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="30dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="2.7"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_width="match_parent">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/main"
            android:id="@+id/cv_farmer"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_collapseMode="pin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="226dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_insurer"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_baseline_person_wallet"
                        app:tint="@color/bg_gray" />

                    <TextView
                        android:id="@+id/tv_insurer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Farmer"
                        android:textColor="@color/bg_gray"
                        android:textSize="15sp" />

                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cv_agrodealer"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            app:cardBackgroundColor="@color/bg_gray"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:layout_collapseMode="pin">

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_others"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="80dp"
                        android:layout_width="100dp"
                        app:tint="@color/main"
                        android:src="@drawable/ic_baseline_person_wallet" />

                    <TextView
                        android:id="@+id/tv_others"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_below="@id/iv_others"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="Agrodealer"
                        android:textAlignment="center"
                        android:textColor="@color/main"
                        android:textSize="15sp" />

                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.7">

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:drawablePadding="10dp"
            android:textAllCaps="false"
            android:text="Continue"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</LinearLayout>

