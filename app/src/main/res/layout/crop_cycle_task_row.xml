<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="4dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCyclesLists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/bg_gray"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="2dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/farmID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat_medium"
                android:padding="8dp"
                android:text="service"
                android:textColor="@color/textColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cycleData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/montserrat_medium"
                android:padding="8dp"
                android:text="startday"
                android:textColor="@color/textColor"
                app:layout_constraintBottom_toBottomOf="@+id/farmID"
                app:layout_constraintStart_toEndOf="@+id/farmID"
                app:layout_constraintTop_toTopOf="@+id/farmID" />

            <TextView
                android:id="@+id/dateForCycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="endday"
                app:layout_constraintBottom_toBottomOf="@+id/cycleData"
                app:layout_constraintStart_toEndOf="@+id/cycleData"
                app:layout_constraintTop_toTopOf="@+id/cycleData" />

            <!--            <TextView-->
<!--                android:id="@+id/startDay"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="12dp"-->
<!--                android:fontFamily="@font/montserrat_medium"-->
<!--                android:text="TextView"-->
<!--                android:textColor="@color/textColor"-->
<!--                app:layout_constraintStart_toStartOf="@+id/textViewCropName"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/textViewCropName" />-->
<!--            -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>